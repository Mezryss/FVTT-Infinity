<section class="tab{{#if tab.active}} active flexcol{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
	<label>
		<span>{{localize "Infinity.Sheets.Quality.Type"}}</span>
		<select name="system.type" {{disabled (not editable)}}>
			{{selectOptions LABELED_QUALITY_TYPES selected=system.type localize=true valueAttr="key" labelAttr="label"}}
		</select>
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Quality.Abbreviation.Hint"}}">{{localize "Infinity.Sheets.Quality.Abbreviation.Label"}}</span>
		<input type="text" name="system.abbreviation" value="{{system.abbreviation}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Quality.Ranked.Hint"}}">{{localize "Infinity.Sheets.Quality.Ranked.Label"}}</span>
		<input type="checkbox" name="system.ranked" {{checked system.ranked}} {{disabled (not editable)}} />
	</label>
</section>
