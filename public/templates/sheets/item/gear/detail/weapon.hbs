<section class="tab{{#if tab.active}} active flexcol{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
	<label>
		<span>{{localize "Infinity.Sheets.Gear.Weapon.Type"}}</span>
		<select name="system.type" {{disabled (not editable)}}>
			{{selectOptions LABELED_WEAPON_TYPES selected=system.type localize=true valueAttr="key" labelAttr="label"}}
		</select>
	</label>

	{{#if showRangedFields}}
	<label>
		<span>{{localize "Infinity.Sheets.Gear.Weapon.Range"}}</span>
		<input type="text" name="system.range" value="{{system.range}}" {{disabled (not editable)}} />
	</label>
	{{/if}}

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Damage.Hint"}}">{{localize "Infinity.Sheets.Gear.Damage.Label"}}</span>
		<input type="text" name="system.damage" value="{{system.damage}}" {{disabled (not editable)}} />
	</label>

	{{#if showRangedFields}}
	<label>
		<span>{{localize "Infinity.Sheets.Gear.Weapon.Burst"}}</span>
		<input type="text" name="system.burst" value="{{system.burst}}" {{disabled (not editable)}} />
	</label>
	{{/if}}

	<label>
		<span>{{localize "Infinity.Sheets.Gear.Size"}}</span>
		<select name="system.size" {{disabled (not editable)}}>
			{{selectOptions LABELED_ITEM_SIZES selected=system.size localize=true valueAttr="key" labelAttr="label"}}
		</select>
	</label>

	{{#if showRangedFields}}
	<label>
		<span>{{localize "Infinity.Sheets.Gear.Weapon.Ammo"}}</span>
		<input type="text" name="system.ammo" value="{{system.ammo}}" {{disabled (not editable)}} />
	</label>
	{{/if}}

	<hr style="height: 1px; margin: 0;" />

	{{> gearQualities }}

	<hr style="height: 1px; margin: 0;" />

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Restriction.Hint"}}">{{localize "Infinity.Sheets.Gear.Restriction.Label"}}</span>
		<input type="text" name="system.restriction" value="{{system.restriction}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Cost.Hint"}}">{{localize "Infinity.Sheets.Gear.Cost.Label"}}</span>
		<input type="text" name="system.cost" value="{{system.cost}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Tariff.Hint"}}">{{localize "Infinity.Sheets.Gear.Tariff.Label"}}</span>
		<input type="text" name="system.tariff" value="{{system.tariff}}" {{disabled (not editable)}} />
	</label>
</section>
