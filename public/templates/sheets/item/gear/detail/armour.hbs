<section class="tab{{#if tab.active}} active flexcol{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
	<label>
		<span>{{localize "Infinity.Sheets.Gear.Armour.Type"}}</span>
		<select name="system.type" {{disabled (not editable)}}>
			{{selectOptions LABELED_ARMOUR_TYPES selected=system.type localize=true valueAttr="key" labelAttr="label"}}
		</select>
	</label>

	{{!-- TODO: In UI Cleanup Pass, these should be a row of 4 number fields. --}}
	<label>
		<span>{{localize "Infinity.Sheets.Gear.Armour.Soak.Head"}}</span>
		<input type="number" min="0" name="system.soak.head" value="{{system.soak.head}}" />
	</label>

	<label>
		<span>{{localize "Infinity.Sheets.Gear.Armour.Soak.Torso"}}</span>
		<input type="number" min="0" name="system.soak.torso" value="{{system.soak.torso}}" />
	</label>

	<label>
		<span>{{localize "Infinity.Sheets.Gear.Armour.Soak.Arms"}}</span>
		<input type="number" min="0" name="system.soak.arms" value="{{system.soak.arms}}" />
	</label>

	<label>
		<span>{{localize "Infinity.Sheets.Gear.Armour.Soak.Legs"}}</span>
		<input type="number" min="0" name="system.soak.legs" value="{{system.soak.legs}}" />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Armour.BTS.Hint"}}">{{localize "Infinity.Sheets.Gear.Armour.BTS.Label"}}</span>
		<input type="number" min="0" name="system.bts" value="{{system.bts}}" />
	</label>

	<hr style="height: 1px; margin: 0;" />

	{{> gearQualities }}

	<hr style="height: 1px; margin: 0;" />

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Restriction.Hint"}}">{{localize "Infinity.Sheets.Gear.Restriction.Label"}}</span>
		<input type="text" name="system.restriction" value="{{system.restriction}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Cost.Hint"}}">{{localize "Infinity.Sheets.Gear.Cost.Label"}}</span>
		<input type="text" name="system.cost" value="{{system.cost}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Tariff.Hint"}}">{{localize "Infinity.Sheets.Gear.Tariff.Label"}}</span>
		<input type="text" name="system.tariff" value="{{system.tariff}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Maintenance.Hint"}}">{{localize "Infinity.Sheets.Gear.Maintenance.Label"}}</span>
		<input type="text" name="system.maintenance" value="{{system.maintenance}}" {{disabled (not editable)}} />
	</label>
</section>
