<section class="tab{{#if tab.active}} active flexcol{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
	<label>
		<span>{{localize "Infinity.Sheets.Gear.Type"}}</span>
		<select name="system.type" {{disabled (not editable)}}>
			{{selectOptions LABELED_GEAR_TYPES selected=system.type localize=true valueAttr="key" labelAttr="label"}}
		</select>
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Augmentation.Type.Hint"}}">{{localize "Infinity.Sheets.Gear.Augmentation.Type.Label"}}</span>
		<select name="system.augmentation.type" {{disabled (not editable)}}>
			{{selectOptions LABELED_AUGMENTATION_TYPES selected=system.augmentation.type localize=true valueAttr="key" labelAttr="label"}}
		</select>
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Augmentation.Category.Hint"}}">{{localize "Infinity.Sheets.Gear.Augmentation.Category.Label"}}</span>
		<select name="system.augmentation.category" {{disabled (not editable)}}>
			{{selectOptions LABELED_AUGMENTATION_CATEGORIES selected=system.augmentation.category localize=true valueAttr="key" labelAttr="label"}}
		</select>
	</label>

	<hr style="height: 1px; margin: 0;" />

	{{> gearQualities qualities=augmentation.qualities qualitiesPath=qualitiesPath}}

	<hr style="height: 1px; margin: 0;" />

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Restriction.Hint"}}">{{localize "Infinity.Sheets.Gear.Restriction.Label"}}</span>
		<input type="text" name="system.restriction" value="{{system.restriction}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Cost.Hint"}}">{{localize "Infinity.Sheets.Gear.Cost.Label"}}</span>
		<input type="text" name="system.cost" value="{{system.cost}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Tariff.Hint"}}">{{localize "Infinity.Sheets.Gear.Tariff.Label"}}</span>
		<input type="text" name="system.tariff" value="{{system.tariff}}" {{disabled (not editable)}} />
	</label>

	<label>
		<span data-tooltip="{{localize "Infinity.Sheets.Gear.Maintenance.Hint"}}">{{localize "Infinity.Sheets.Gear.Maintenance.Label"}}</span>
		<input type="text" name="system.maintenance" value="{{system.maintenance}}" {{disabled (not editable)}} />
	</label>
</section>
